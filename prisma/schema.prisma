// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. REQUIRED: This allows Shopify to log merchants in
model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

// 2. YOUR APP: This stores the waiting list
model WaitlistItem {
  id          Int      @id @default(autoincrement())
  email       String
  product     String?  // Optional: which product they are waiting for
  createdAt   DateTime @default(now())
}